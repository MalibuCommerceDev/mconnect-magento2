<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction" component="Magento_Ui/js/grid/tree-massactions">
            <action name="addToQueue">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">addToQueue</item>
                        <item name="label" xsi:type="string" translate="true">Add To NAV Sync Queue</item>
                        <item name="url" xsi:type="string">mconnect/order/massQueue</item>
                    </item>
                </argument>
            </action>
            <action name="proceed">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">proceed</item>
                        <item name="label" xsi:type="string" translate="true">Sync to NAV Now</item>
                        <item name="url" xsi:type="string">mconnect/order/massProceed</item>

                    </item>
                </argument>
            </action>
            <action name="synced">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">synced</item>
                        <item name="label" xsi:type="string" translate="true">Mark as Synced to NAV</item>
                        <item name="url" xsi:type="string">mconnect/order/massSynced</item>

                    </item>
                </argument>
            </action>
        </massaction>
    </listingToolbar>
    <columns name="sales_order_columns">
        <column name="nav_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="sorting" xsi:type="string">desc</item>
                    <item name="label" xsi:type="string" translate="true">NAV ID</item>
                    <item name="sortOrder" xsi:type="number">105</item>
                </item>
            </argument>
        </column>
        <column name="mc_status" class="MalibuCommerce\MConnect\Ui\Component\Listing\Column\NavStatus">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">MalibuCommerce\MConnect\Model\Adminhtml\Config\Source\Status</item>
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">select</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">NAV Status</item>
                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
                    <item name="sortOrder" xsi:type="number">106</item>
                </item>
            </argument>
        </column>
    </columns>
</listing>
