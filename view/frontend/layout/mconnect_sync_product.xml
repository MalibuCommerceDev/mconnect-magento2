<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceContainer name="header.container" remove="true"/>
    <referenceContainer name="page.top" remove="true"/>
    <referenceContainer name="footer-container" remove="true"/>

    <head>
        <meta name="charset" content="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <css src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" src_type="url"/>
        <css src="MalibuCommerce_MConnect::css/mconnect.css" />
        <css src="MalibuCommerce_MConnect::css/log.css" />
        <script src="MalibuCommerce_MConnect::js/mconnect.js"/>
        <script src="MalibuCommerce_MConnect::js/vkbeautify.js"/>
        <remove src="translate-inline.js"/>
        <remove src="legacy-build.min.js"/>
    </head>
    <referenceContainer name="content">
        <block class="MalibuCommerce\MConnect\Block\Sync\Product" name="sync" template="MalibuCommerce_MConnect::sync/product.phtml" />
    </referenceContainer>
</page>
